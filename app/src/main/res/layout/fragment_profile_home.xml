<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <LinearLayout
        android:id="@+id/lin_navHeader1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0095D7"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/lin_navHeader2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="#0095D7"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_navHeaderProfilePhoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/rb_rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:progressDrawable="@drawable/drw_profile_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_navHeader3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_navHeaderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_navHeaderLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/lin_navHeader4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#0095D7"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/lin_navHeader6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nav_header_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_nav_header_points_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_points"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_navHeader7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nav_header_helpme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_nav_header_help_me_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_HelpMe"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_nav_header_offered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nav_header_offered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_nav_header_offered_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_offered"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/tv_myProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/img_arrow_right_grey"
                    android:drawableRight="@drawable/img_arrow_right_grey"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="@string/my_profile"
                    android:textColor="@color/colorHint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_reviewAndRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/img_arrow_right_grey"
                    android:drawableRight="@drawable/img_arrow_right_grey"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="@string/reviews_and_ratings"
                    android:textColor="@color/colorHint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_rewards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/img_arrow_right_grey"
                    android:drawableRight="@drawable/img_arrow_right_grey"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="@string/rewards"
                    android:textColor="@color/colorHint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_packages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/img_arrow_right_grey"
                    android:drawableRight="@drawable/img_arrow_right_grey"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="@string/packages"
                    android:textColor="@color/colorHint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_payments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/img_arrow_right_grey"
                    android:drawableRight="@drawable/img_arrow_right_grey"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="@string/payments"
                    android:textColor="@color/colorHint"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingStart="20dp">

                <TextView
                    android:id="@+id/tv_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/img_arrow_right_grey"
                    android:drawableRight="@drawable/img_arrow_right_grey"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="@string/settings"
                    android:textColor="@color/colorHint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_appFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/img_arrow_right_grey"
                    android:drawableRight="@drawable/img_arrow_right_grey"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="@string/app_feedback"
                    android:textColor="@color/colorHint"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/tv_signOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="@string/sign_out"
                android:textColor="@color/colorHint"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>